/* 技师详情页样式 */
.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
  background: #F8F5F2;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
}

.back, .action {
  font-size: 32rpx;
  color: #666666;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.tech-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 32rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #F8F5F2 100%);
}

.tech-avatar-large {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 4rpx solid #C53D13;
}

.tech-name-large {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.tech-rating {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.stars {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.rating-score {
  font-size: 28rpx;
  color: #FAAD14;
  font-weight: 500;
}

.tech-tags {
  display: flex;
  gap: 16rpx;
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
  background: #FFFFFF;
  margin-bottom: 24rpx;
}

.stat {
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #C53D13;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.section {
  background: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.more {
  font-size: 26rpx;
  color: #C53D13;
}

.price-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8F5F2;
  border-radius: 16rpx;
}

.service-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.service-info {
  text-align: right;
}

.service-price {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #C53D13;
  margin-bottom: 4rpx;
}

.service-usage {
  font-size: 24rpx;
  color: #999999;
}

.service-area {
  font-size: 28rpx;
  color: #666666;
}

.review-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.review-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.reviewer {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.review-stars {
  font-size: 24rpx;
  color: #FAAD14;
}

.review-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999999;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.05);
}

.book-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100% !important;
  margin: 0 !important;
}

.btn-sub {
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 4rpx;
}
