<view class="container">
  <!-- 顶部 -->
  <view class="header">
    <text class="title">👨‍⚕️ 技师工作台</text>
    <view class="header-actions">
      <text class="action">消息</text>
      <text class="action">设置</text>
    </view>
  </view>

  <!-- 收入统计 -->
  <view class="income-card">
    <view class="income-header">
      <text class="income-label">💰 今日收入</text>
      <text class="income-amount">¥ 1,250.00</text>
    </view>
    
    <view class="income-stats">
      <view class="stat-item">
        <text class="stat-value">5单</text>
        <text class="stat-label">完成订单</text>
      </view>
      
      <view class="stat-item">
        <text class="stat-value">6.5h</text>
        <text class="stat-label">在线时长</text>
      </view>
      
      <view class="stat-item">
        <text class="stat-value">4.9</text>
        <text class="stat-label">评分</text>
      </view>
    </view>
  </view>

  <!-- 实时订单 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">🔔 实时订单</text>
      <text class="section-subtitle">新订单语音播报</text>
    </view>

    <view class="order-card new-order">
      <view class="order-badge">🆕 新订单</view>
      
      <view class="order-info">
        <view class="order-row">
          <text class="order-no">订单号：W20240315000006</text>
          <text class="countdown">03:00</text>
        </view>
        
        <view class="order-detail">
          <text class="service">服务：理疗（90分钟）</text>
          <text class="quantity">预估用量：250ml</text>
        </view>
        
        <view class="user-info">
          <text>用户：张先生 | 距您1.5km</text>
          <text>地址：朝阳区XX大厦</text>
        </view>
      </view>
      
      <view class="order-actions">
        <button class="btn-accept" bindtap="acceptOrder">立即接单</button>
        <button class="btn-ignore" bindtap="ignoreOrder">忽略</button>
      </view>
    </view>
  </view>

  <!-- 我的订单 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">📋 我的订单</text>
    </view>

    <view class="order-tabs">
      <view class="tab active">服务中(1)</view>
      <view class="tab">待服务(2)</view>
      <view class="tab">已完成(5)</view>
    </view>

    <view class="order-list">
      <view class="order-item">
        <view class="order-status serving">服务中</view>
        <view class="order-content">
          <text class="order-no">订单号：W20240315000005</text>
          <text class="order-meta">用户：李女士 | 已开始20分钟</text>
        </view>
        <button class="btn-view" bindtap="goToWriteOff">扫码核销</button>
      </view>

      <view class="order-item">
        <view class="order-status pending">待服务</view>
        <view class="order-content">
          <text class="order-no">订单号：W20240315000004</text>
          <text class="order-meta">预约时间：15:00</text>
        </view>
        <button class="btn-view">查看详情</button>
      </view>
    </view>
  </view>
</view>
