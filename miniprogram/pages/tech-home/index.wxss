/* 技师工作台样式 */
.container {
  min-height: 100vh;
  background: #F8F5F2;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #C53D13 0%, #E55A2B 100%);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.header-actions {
  display: flex;
  gap: 32rpx;
}

.action {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.income-card {
  margin: -48rpx 32rpx 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(197, 61, 19, 0.15);
}

.income-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.income-label {
  font-size: 28rpx;
  color: #666666;
}

.income-amount {
  font-size: 48rpx;
  font-weight: 600;
  color: #C53D13;
}

.income-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #F5F5F5;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.section {
  padding: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
}

.order-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08);
  border: 2rpx solid #C53D13;
}

.order-badge {
  display: inline-block;
  background: #C53D13;
  color: #FFFFFF;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.order-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 28rpx;
  color: #666666;
}

.countdown {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF4D4F;
}

.order-detail {
  margin-bottom: 16rpx;
}

.service, .quantity {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-info {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.user-info text {
  display: block;
  margin-bottom: 4rpx;
}

.order-actions {
  display: flex;
  gap: 24rpx;
}

.btn-accept {
  flex: 1;
  background: linear-gradient(135deg, #C53D13 0%, #E55A2B 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-ignore {
  flex: 1;
  background: #F5F5F5;
  color: #666666;
  border-radius: 48rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.order-tabs {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.tab {
  font-size: 28rpx;
  color: #999999;
  padding: 16rpx 0;
}

.tab.active {
  color: #C53D13;
  font-weight: 600;
  border-bottom: 4rpx solid #C53D13;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08);
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-right: 24rpx;
}

.order-status.serving {
  background: rgba(24, 144, 255, 0.1);
  color: #1890FF;
}

.order-status.pending {
  background: rgba(250, 173, 20, 0.1);
  color: #FAAD14;
}

.order-content {
  flex: 1;
}

.order-no {
  display: block;
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.order-meta {
  font-size: 24rpx;
  color: #999999;
}

.btn-view {
  background: rgba(197, 61, 19, 0.1);
  color: #C53D13;
  border-radius: 32rpx;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
}
