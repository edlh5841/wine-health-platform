/* 首页样式 */
.container {
  min-height: 100vh;
  padding: 32rpx;
  background: linear-gradient(180deg, #F8F5F2 0%, #FFFFFF 100%);
}

.header {
  text-align: center;
  padding: 48rpx 0;
}

.brand-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #C53D13;
  margin-bottom: 16rpx;
}

.brand-subtitle {
  font-size: 28rpx;
  color: #999999;
}

.search-box {
  margin-bottom: 32rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999999;
}

.location-bar {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666666;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.tech-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tech-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08);
}

.tech-header {
  display: flex;
  margin-bottom: 24rpx;
}

.tech-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #F5F5F5;
}

.tech-info {
  flex: 1;
}

.tech-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.tech-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-right: 16rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: rgba(197, 61, 19, 0.1);
  color: #C53D13;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.tag-gold {
  background: rgba(255, 215, 0, 0.15);
  color: #B8860B;
}

.tech-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.rating {
  color: #FAAD14;
  font-weight: 500;
}

.divider {
  margin: 0 12rpx;
  color: #CCCCCC;
}

.tech-location {
  font-size: 24rpx;
  color: #999999;
}

.tech-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #F5F5F5;
}

.price {
  font-size: 32rpx;
  font-weight: 600;
  color: #C53D13;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.status-badge.online {
  background: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}

.status-badge.offline {
  background: rgba(153, 153, 153, 0.1);
  color: #999999;
}

.promo-banner {
  margin-top: 32rpx;
  background: linear-gradient(135deg, #C53D13 0%, #E55A2B 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
}

.promo-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}
