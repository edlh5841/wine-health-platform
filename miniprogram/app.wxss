/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'DIN Alternate', sans-serif;
  background-color: #F8F5F2;
  color: #333333;
}

/* 主品牌色 */
.color-primary { color: #C53D13; }
.bg-primary { background-color: #C53D13; }

/* 辅助色 */
.color-success { color: #52C41A; }
.color-warning { color: #FAAD14; }
.color-error { color: #FF4D4F; }
.color-gold { color: #FFD700; }
.color-green-money { color: #00C853; }

/* 中性色 */
.color-white { color: #FFFFFF; }
.color-gray-100 { color: #F5F5F5; }
.color-gray-400 { color: #999999; }
.color-gray-600 { color: #333333; }

/* 字号 */
.text-h1 { font-size: 48rpx; font-weight: 600; }
.text-h2 { font-size: 32rpx; font-weight: 600; }
.text-h3 { font-size: 24rpx; font-weight: 500; }
.text-body { font-size: 28rpx; font-weight: 400; }
.text-caption { font-size: 24rpx; font-weight: 400; }
.text-small { font-size: 20rpx; font-weight: 400; }

/* 阴影 */
.shadow-card { box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08); }
.shadow-button { box-shadow: 0 4rpx 16rpx rgba(197, 61, 19, 0.15); }

/* 圆角 */
.radius-sm { border-radius: 16rpx; }
.radius-md { border-radius: 24rpx; }
.radius-lg { border-radius: 32rpx; }
.radius-xl { border-radius: 48rpx; }
.radius-round { border-radius: 50%; }

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #C53D13 0%, #E55A2B 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 4rpx 16rpx rgba(197, 61, 19, 0.15);
}

.btn-primary::after { border: none; }

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(197, 61, 19, 0.08);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: rgba(197, 61, 19, 0.1);
  color: #C53D13;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.tag-gold {
  background: rgba(255, 215, 0, 0.15);
  color: #B8860B;
}
